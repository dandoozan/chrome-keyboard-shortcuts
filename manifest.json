{
    "name": "ChromeKeyboardShortcuts",
    "version": "0.1",
    "description": "",
    "permissions": [
        "tabs",
        "<all_urls>"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google.com; object-src 'self'",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "exclude_matches": [],
            "js": [
                "js/vendor/jquery-3.1.1.min.js",
                "js/vendor/mousetrap.min.js",
                "js/contentScripts/main.js",
                "js/contentScripts/general.js"
            ]
        },
        {
            "matches": ["https://www.google.com/search?*"],
            "exclude_matches": [],
            "js": [
                "js/contentScripts/google.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/background/background_util.js",
            "js/background/background_listenForReload.js",
            "js/background/background.js"
        ],
        "persistent": false
    }
}
